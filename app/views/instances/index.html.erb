<h1>Instances</h1>

<%= link_to 'New Instance', new_instance_path %>

<table width="100%">
  <thead>
  <tr>
    <th>Name</th>
    <p id="notice"><%= notice %></p>
    <th colspan="3" width="20%">Controls</th>
  </tr>
  </thead>
  <tbody>
  <% [*@instances].each do |instance| %>
    <tr>
      <td><%= instance.name %></td>
      <td><%= link_to 'Show', instance %></td>
      <td><%= link_to 'Edit', edit_instance_url(instance) %></td>
      <td><%= link_to 'Destroy', instance, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>

  </tbody>
</table>
